@using Nop.Plugin.Widgets.StudentCRUD.Models
@model IEnumerable<StudentViewModel>

@{
    Layout = "_ConfigurePlugin";
}

<div>
    <div>
        <h5>For student CRUD operations, goto admin panel. Here is the table: </h5>
        <br>
        <br>
        <table style="font-size:large">
            <tr>
                <th>Name</th>
                <th>Age</th>
            </tr>
            @{
                foreach (var student in Model)
                {
                    <tr>
                        <td>
                            @student.Name
                        </td>
                        <td>
                            @student.Age
                        </td>
                        <td>
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary mx-2">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger mx-2">Delete</a>
                        </td>
                    </tr>
                }
            }
        </table>
            <a asp-controller="Student" asp-action="Create" class="btn btn-success mx-2">Add new</a>
    </div>
</div>